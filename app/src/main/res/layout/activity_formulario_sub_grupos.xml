<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FormularioSubGruposActivity"
    android:orientation="vertical">


    <EditText android:id="@+id/activity_formulario_sub_grupo_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Nome Sub-Grupo"
        android:inputType="textCapWords"/>

    <Spinner
        android:id="@+id/activity_formulario_sub_grupos_spinner_grupos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"/>

    <Button android:id="@+id/activity_formulario_sub_grupo_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="SALVAR"/>

</LinearLayout>